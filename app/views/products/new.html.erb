<div class="mt-4">

    <%= form_with model:Product.new do |f| %>
        <div class="mb-4">
            <%= f.text_field :name, placeholder:'Nombre del producto', class:'appearance-none block w-full py-3 px-4 leading-tight text-gray-700 bg-gray-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none'%>
        </div>
        <div class="mb-4">
            <%= f.text_field :serial, placeholder:'Código de barras', class:'appearance-none block w-full py-3 px-4 leading-tight text-gray-700 bg-gray-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none'%>
        </div>

        <div class="mb-4">
            <%= f.text_area :description, placeholder:'Descripción', class:'appearance-none block w-full py-3 px-4 leading-tight text-gray-700 bg-gray-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none'%>
        </div>
        <div class="mb-4">
            <%= f.label 'Instalación', class:"block text-sm font-medium mb-2"%>
            <%= f.collection_select :place_id, Place.all, :id, :name, class:'appearance-none block w-full px-4 py-3 mb-2 text-sm placeholder-gray-500 bg-white border rounded'%>
        </div>
        <div class="mb-4">
            <%= f.submit 'Crear producto', class:'cursor-pointer inline-block w-full py-4 px-8 leading-none text-white bg-indigo-600 hover:bg-indigo-700 font-semibold rounded shadow' %>
        </div>
    <% end %>
</div>